{
  "name": "live-env-validator",
  "displayName": "Live Env Validator",
  "description": "Miconfigured env vars waste time, Live Env Validator underlines process.env.SOMETHING if not defined in env. It prevents \"undefined\" runtime errors",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ushnuel/live-env-validator.git"
  },
  "author": "Emmanuel Eze",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Live Env Validator",
      "properties": {
        "liveEnvValidator.envFiles": {
          "type": "array",
          "default": [
            ".env",
            ".env.local"
          ],
          "description": "Which env files should be validated against"
        }
      }
    },
    "commands": [
      {
        "command": "live-env-validator.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "generate-types": "tsc --emitDeclarationOnly --outDir dist",
    "compile": "npm run check-types && npm run lint && npm run generate-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out && tsc src/extension.ts --outDir out --module CommonJS",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run clean && npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "clean": "rimraf out"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "mocha": "^11.7.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "sinon": "^21.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
